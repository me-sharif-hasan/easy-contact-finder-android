            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="For Developers:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

